<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints minWidth="1080.0" prefWidth="0.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="720.0" />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="200.0" prefWidth="511.0" styleClass="bodybg" stylesheets="@iTravel_StyleSheet.css">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Account">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Create Account" />
                     </items></Menu>
                  <Menu mnemonicParsing="false" text="Flight Actions">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New Flight" />
                        <MenuItem mnemonicParsing="false" text="Cancellations" />
                      <MenuItem mnemonicParsing="false" text="Resevations" />
                      <MenuItem mnemonicParsing="false" text="Query of Status" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Flight Information">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Confirmed Reservations" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Reports">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Customer Affinity Report" />
                        <MenuItem mnemonicParsing="false" text="Flight Revenue Report" />
                        <MenuItem mnemonicParsing="false" text="Monthly Flight Report" />
                        <MenuItem mnemonicParsing="false" text="Flight Report" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Incentive Programs">
                     <items>
                        <MenuItem mnemonicParsing="false" text="Frequent Flyers Program" />
                     </items></Menu>
                <Menu mnemonicParsing="false" text="About">
                  <items>
                    <MenuItem fx:id="AboutMenuClick" mnemonicParsing="false" onAction="#openAbout" text="About Us" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</GridPane>
